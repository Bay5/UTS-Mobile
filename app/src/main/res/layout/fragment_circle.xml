<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CircleFragment">

    <TextView
        android:id="@+id/jariJariTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jariJari"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/jarijariEdt"
        android:hint="@string/hintJariJari"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/jariJariTv"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hasilBtn"
        android:text="@string/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jarijariEdt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hasilLuasTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        app:layout_constraintTop_toBottomOf="@id/hasilBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hasilKelilingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="456"
        app:layout_constraintTop_toBottomOf="@id/hasilLuasTv"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>